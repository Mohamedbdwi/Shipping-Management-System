<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shipping_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shipping_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark nav-backg  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="witColor navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shipping Project</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class=" navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="custom-nav navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="witColor nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole(Roles.SuperAdmin.ToString()) || User.IsInRole(Roles.Employee.ToString()))
                        {
                            <li class="nav-item">
                                <a class="witColor nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                        }

                        @if (User.IsInRole(Roles.Seller.ToString()))
                        {
                        <li class="nav-item">
                            <a class="witColor nav-link text-light" asp-area="" asp-controller="Seller" asp-action="Index">Seller Dashboard</a>
                        </li>
                        }
                        <li class="nav-item">
                            @*<a class="witColor nav-link text-light" asp-area="" asp-controller="User" asp-action="index">Manage Users</a>*@
                        </li>

                        <li class="nav-item">
                            @*<a class="witColor nav-link text-light" asp-area="" asp-controller="Roles" asp-action="Index">Manage Roles</a>*@
                        </li>


                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="witColor nav-link text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>

                            <li class="nav-item">
                                <a class="witColor nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                        
                        <li class="nav-item">
                            @*<a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="AddNewUser">Add New User</a>*@
                        </li>
                        
                        @if (User.Identity.IsAuthenticated){
                            <li class="nav-item">
                                <a class="witColor nav-link text-light" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
