@model Shipping_Project.Models.Weights

@{
    ViewData["Title"] = "Edit";
}

<h1 class="witColor">Manage Weight</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEdit">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NormalWeight" class="witColor control-label">Normal Cost of shipping
                in(EGP) from 0KG to weight:</label>
                <input asp-for="NormalWeight" class="form-control" />
                <span asp-validation-for="NormalWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NormalCost" class="witColor control-label">KG =</label>
                <input  value="@Model.NormalCost" asp-for="NormalCost" class="form-control" />
                <span asp-validation-for="NormalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExtraCostPerKG" class="witColor control-label">(EGP)
                <br />
                and the cost of every 1KG 
                additional in (EGP) </label>
                <input  value="@Model.ExtraCostPerKG" asp-for="ExtraCostPerKG" class="form-control" />
                <span asp-validation-for="ExtraCostPerKG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   @* <script src="~/js/cost.js"></script>*@
}
